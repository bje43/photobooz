{
  "name": "photobooz",
  "version": "0.0.1",
  "description": "Photobooth health monitoring service - Monorepo",
  "author": "",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start:dev": "cd server && npm run start:dev",
    "start:prod": "NODE_PATH=./server/node_modules node dist/main",
    "dev": "concurrently \"npm run start:dev\" \"npm run client:dev\"",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "server:install": "cd server && npm install",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "fix:modules": "rm -rf node_modules package-lock.json && npm install && echo 'Root node_modules cleaned. Server dependencies should be in server/node_modules'",
    "install:all": "npm install && npm run server:install && npm run client:install",
    "prisma:generate": "cd server && npm run prisma:generate",
    "prisma:migrate": "cd server && npm run prisma:migrate",
    "prisma:migrate:deploy": "cd server && npm run prisma:migrate:deploy",
    "prisma:studio": "cd server && npm run prisma:studio",
    "postinstall": "cd server && npm install && npm run prisma:generate"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

